        crossorigin="anonymous"></script>
</head>

<body>
    <!-- getting the data from database -->
    <!-- <%=print[0].cus_name%>  -->
    <div class="conatiner">
        <h2 class="bg-dark text-white text-center p-3 mt-2">Edit Scheme Details</h2>
        <form action="/scheme_action" method="POST" class="p-5">
            <div class="form-group ">
                <label for="name">ID</label>
                <input type="text" class="form-control" id="id" name="id" value=" <%=print[0].scheme_id%>" readonly>
            </div>
            <div class="form-group ">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" value=" <%=print[0].name%> " required>

            </div>
            <div class="form-group ">
                <label for="text">Amount</label>
                <input type="text" class="form-control" id="Amount" name="Amount" value=" <%=print[0].amount%> "
                    required>

            </div>
            <div class="form-group">
                <label for="text">Required Asset</label>
                <input type="text" class="form-control" id="r_asset" name="r_asset" value=" <%=print[0].r_asset%> "
                    required>
            </div>
            <div class="form-group">
                <label for="text">Number Of Installment</label>
                <input type="text" class="form-control" id="Installment"  name="Installment"
                    value=" <%=print[0].no_installment%> " required>
            </div>
            <div class="form-group">
                <label for="text">Duration</label>
                <input type="text" class="form-control" id="Duration"  name="Duration"
                    value=" <%=print[0].duration%> " required>
            </div>
            
            <!-- <div class="form-group">
                <label for="usertype">Select Scheme</label>
                <select name="scheme" class="form-control" id="scheme" required>
                    <option readonly value="">Select Loan-Type</option>
        
                    <% print.forEach(function (user) { %>
        
                    <option><%= user.name %></option>
        
                    <% }) %>
        
                </select>
            </div>
         -->
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/cus_view" class="btn btn-secondary">Go Back</a>



        </form>
    </div>

</body>

</html>