                        </i>
                        Logout
                    </a>
                </li>
            </ul>
    
        </div>
    </nav>
    <!-- nav bar ends -->

    <div class="container p-3">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Required Asset</th>
                    <th scope="col">Number Of Installments</th>
                    <th scope="col">Installment Amount</th>
                    <th scope="col">Duration</th>
                    <th scope="col">Added Date</th>
                    <th></th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>

<% print.forEach(function (user) { %>
    <tr>
    <td><%= user.scheme_id %></td>
    <td><%= user.name %></td>
    <td><%= user.amount %></td>
    <td><%= user.r_asset %></td>
    <td><%= user.no_installment %></td>
    <td><%= user.Install_amount%></td>
    <td><%= user.duration %></td>
    <td><%= user.date %></td>
    <td>
                <a href="/scheme_action/<%=user.scheme_id %>" class="btn btn-primary" <% var id  = user.scheme_id %></a>Edit</a>

    </td>
    <td>
        <a href="/delete_scheme/<%=user.scheme_id %>" onclick="return confirm('Are You Sure?');" class="btn btn-danger">Delete</a>
    </td>

    <% }) %>
     </tr>

                
                

            </tbody>
        </table>

        <!-- modal -->

</body>

